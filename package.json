{
  "name": "texas-holdem",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "backend",
    "frontend"
  ],
  "scripts": {
    "start": "npm run start --workspace=backend",
    "start:dev": "concurrently \"npm run start:dev --workspace=backend\" \"npm run start --workspace=frontend\"",
    "build": "npm run build --workspace=frontend",
    "prepare": "husky"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "husky": "^9.0.11"
  }
}
